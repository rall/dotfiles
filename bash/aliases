. ~/.zsh/aliases

# changing directory to code project
function c { cd ~/code/$1; }

# alternative to "rails" command to use templates
function railsapp {
  template=$1
  appname=$2
  shift 2
  rails $appname -m http://github.com/ryanb/rails-templates/raw/master/$template.rb $@
}

#git flow
alias gff='git flow feature'

# misc
alias reload='. ~/.bash_profile'

# ssh tunnels
alias datastoretunnel='ssh -f -i ~/.ec2/rubber -L 7777:localhost:5432 obikosh@ec2-50-16-54-145.compute-1.amazonaws.com -N'